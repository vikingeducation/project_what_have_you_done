<div class ='boxed'>
  <h3>{{bill.short_title}}</h3>
  <h5>{{bill.official_title}}</h5>
  <h4>The bill: {{bill.result}}</h4>
  <h3>Your legislator voted: {{bill.vote}}</h3>
  <h5>Link to <a href='{{bill.link}}'>congress.gov of this bill</a></h5>
</div>

{{/each}}
